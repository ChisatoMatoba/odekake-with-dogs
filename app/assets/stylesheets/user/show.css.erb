/* original */
.main {
  background-color: white;
  background-image: url(<%= asset_path('bg_wood.jpg') %>);
  background-repeat: repeat;
}

.user__wrapper {
  padding-top: 150px;
  padding-bottom: 70px;
  margin: 0 auto;
  width: 80%;
}

.page-heading {
  margin-left: 17%;
}

.bg-color {
  font-weight: bold;
  background-color: rgba(255, 255, 255, 0.5);
}

.detail-table {
  margin-bottom: 30px;
  width: 70%;
  margin: 5px auto 20px auto;
}

.detail-item {
  width: 20%;
  background-color: #e5ffcc;
  border: 1px solid #000;
  text-align: center;
}

.detail-value {
  width: 80%;
  padding: 20px;
  background-color: #ffffff;
  border: 1px solid #000;
}

.item-box-img {
  width: 90%;
  min-height: 100px;
  background-image: url(<%= asset_path('bg_yellow.jpeg') %>);
  background-repeat: repeat;
}
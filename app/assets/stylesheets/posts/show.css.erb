.post-show-main {
  background-color: white;
  background-image: url(<%= asset_path('bg_grass.jpg') %>);
  background-repeat: repeat;
}


.other-images {
  display: flex;
}

.other-image {
  margin-right: 10px;
}

.image-delete-button {
  text-align: center;
  border: solid 1px;
  cursor: pointer;
  margin-bottom: 5px;
}

.comment-box {
  background-color: #ffffff;
  text-align: center;
  width: 70%;
  margin: 5px auto 20px auto;
  padding: 100px auto;
}

.comment-text {
  width: 80%;
  height: 150px;
  padding: 10px;
  border: solid 2px #dedede;
  resize: none;
}

.comments_lists {
  margin: 100px auto;
}

.another-posts {
  margin: 30px auto;
  color: #3CCACE;
  text-decoration: none;
  font-weight: bold;
  font-size: 23px;
  text-align: center;
}

.edit-del {
  width: 120px;
  background: #fffaf0;
  text-align: center;
  bottom: 10px;
  right: 10px;
  position: fixed;
  padding: 15px;
  display: flex;
  flex-direction: column;
}

.item-red-btn {
  text-align: center;
  background-color: green;
  font-size: 20px;
  font-weight: bold;
  color: #FFF;
  margin: 5px 0px;
  padding: 2vh 1vw;
  border-radius: 10%;
}

.item-destroy {
  background-color: lightgray;
  text-align: center;
  font-size: 20px;
  color: black;
  margin: 5px 0px;
  padding: 2vh 1vw;
  border-radius: 10%;
}

<%= render "shared/header" %>
<div class='main'>

<section data-bs-version="5.1" class="header10 cid-tOiHnzp6jK mbr-fullscreen" id="header10-1j">
  <div class="container-fluid">
    <div class="row">
      <div class="content-wrap col-12 col-md-6">
        <h1 class="mbr-section-title mbr-fonts-style mbr-white mb-4 display-1">
          <strong>おでかけ<br>with DOGS!!</strong>
        </h1>
        
        <p class="mbr-fonts-style mbr-text mbr-white mt-4 display-7">
          あなたと愛犬の毎日をもっと楽しくするために…
        </p>
        <div class="mbr-section-btn mt-5">
          <% if user_signed_in? %>
            <p class="mbr-fonts-style mbr-text mbr-white display-5">
              <b>Let's GO！！！</b>
            </p>
          <% else %>
            <%= link_to 'ログイン', new_user_session_path, class: "btn btn-outline-light display-7" %></li>
            <%= link_to '新規登録はこちら', new_user_registration_path, class: "btn btn-outline-light display-7" %></li>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
  <div class='item-contents'>
    <h2 class='title'>みんなのおでかけ情報一覧</h2>
    <ul class='item-lists'>
      <% @posts.each do |post| %>
        <li class='list'>
          <%= link_to post_path(post.id) do %>
            <div class='item-img-content'>
              <%= image_tag(post.image, class: "item-img") %>
            </div>
            <div class='item-info'>
              <h3 class='item-name'>
                <%= post.place_name %>
              </h3>
              <div class='item-price'>
                <span><%= post.prefecture.name + "　　　" + post.rating.name %></span>
              </div>
              <div class='item-price'>
                <span><%= link_to "投稿者：" + post.user.nickname + "さん", "/users/#{post.user_id}", class: :comment_user %></span>
              </div>

              
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<section data-bs-version="5.1" class="gallery1 mbr-gallery cid-tOiHBd9Aax" id="gallery01-1l">
  <div class="container-fluid">
  <!-- title -->
      <div class="row justify-content-center">
          <div class="col-12 content-head">
              <div class="mb-5">
                  <h3 class="mbr-section-title mbr-fonts-style align-center m-0 display-2"><strong>Photo Gallery</strong></h3>
                  <h4 class="mbr-section-subtitle mbr-fonts-style align-center mb-0 mt-4 display-7">みんなのおでかけフォト</h4>
              </div>
          </div>
      </div>
      
  <!-- photo -->
      <div class="row mbr-gallery">
  <!-- 1画像（postの数だけ) -->
          <div class="col-12 col-md-6 col-lg-3 item gallery-image">
              <div class="item-wrapper mb-3" data-toggle="modal" data-bs-toggle="modal" data-target="#tOiMnQnqDw-modal" data-bs-target="#tOiMnQnqDw-modal">
                  <%= image_tag("gallery01.jpg", class: "w-100", alt: "Mobirise Website Builder",  data: { slide_to: "0", bs_slide_to: "0", target: "#lb-tOiMnQnqDw", bs_target: "#lb-tOiMnQnqDw" }) %>
              </div>
              <h6 class="mbr-item-subtitle mbr-fonts-style align-center mb-0 mt-3 display-7">
                  Image Caption and <a href="#" class="text-primary">Link</a>
              </h6>
          </div>
  <!-- 1 -->


  <!-- 画像クリック後 -->
      <div class="modal mbr-slider" tabindex="-1" role="dialog" aria-hidden="true" id="tOiMnQnqDw-modal">
          <div class="modal-dialog" role="document">
              <div class="modal-content">
                  <div class="modal-body">
                      <div class="carousel slide carousel-fade" data-pause="false" data-bs-pause="false" id="lb-tOiMnQnqDw" data-interval="5000" data-bs-interval="5000">
                          <div class="carousel-inner">
                            <!-- 複数画像があるとき枚数分(スライド用) -->
                              <div class="carousel-item active">
                                <%= image_tag("gallery01.jpg", class: "d-block w-100", alt: "Mobirise Website Builder") %>
                              </div>
                          </div>
                          <!-- 下の●、複数画像があるとき枚数分(スライド用) -->
                          <ol class="carousel-indicators">
                              <li data-slide-to="0" data-bs-slide-to="0" class="active" data-target="#lb-tOiMnQnqDw" data-bs-target="#lb-tOiMnQnqDw"></li>
                              <li data-slide-to="1" data-bs-slide-to="1" data-target="#lb-tOiMnQnqDw" data-bs-target="#lb-tOiMnQnqDw"></li>
                          </ol>
                          <!-- 閉じるボタン -->
                          <a role="button" href="" class="close" data-dismiss="modal" data-bs-dismiss="modal" aria-label="Close">
                          </a>
                          <!-- 前へ、次へボタン(1枚のときは表示しない？) -->
                          <a class="carousel-control-prev carousel-control" role="button" data-slide="prev" data-bs-slide="prev" href="#lb-tOiMnQnqDw">
                              <span class="mobi-mbri mobi-mbri-arrow-prev" aria-hidden="true"></span>
                              <span class="sr-only visually-hidden">Previous</span>
                          </a>
                          <a class="carousel-control-next carousel-control" role="button" data-slide="next" data-bs-slide="next" href="#lb-tOiMnQnqDw">
                              <span class="mobi-mbri mobi-mbri-arrow-next" aria-hidden="true"></span>
                              <span class="sr-only visually-hidden">Next</span>
                          </a>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
</section>


















